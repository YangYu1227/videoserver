* {
	padding: 0;
	margin: 0;
}

html,
body {
	font-family: "微软雅黑";
	font-size: 14px;
	background: #e6edf5;
	width: 100%;
	height: 100%;
}

ul,
ol,
li {
	list-style: none;
}
/** 重置文本格式元素 **/
a {
	text-decoration: none;
}
a:hover {
	text-decoration: none;
}
a,
img {
	-webkit-touch-callout: none;
	/* 禁止长按链接与图片弹出菜单 */
}
.clearfloat:after {/*默认清除浮动*/
	display: block;
	clear: both;
	content: "";
	visibility: hidden;
	height: 0
}
.overflowhidden{/*超出部分隐藏并显示省略号*/
	display: block;
	white-space: nowrap;
	overflow: hidden;
	text-overflow: ellipsis;
}
/*header*/

.header_body {
	width: 100%;
	height: 112px;
	background: #de1606;
}

.header_content {
	width: 1200px;
	height: 112px;
	background: #de1606;
	margin: 0 auto;
	padding-top: 46px;
	box-sizing: border-box;
}

.header_content span {
	color: #ffffff;
	font-size: 20px;
}

.exit {
	background: url(../img/exit.png) no-repeat left center;
	padding-left: 35px;
	cursor: pointer;
}
.change_password{
	font-size: 20px;
	padding-right: 20px;
	color: #FFF;
	cursor: pointer;
}

/*footer*/

#footer {
	width: 100%;
	/*position: absolute;
	bottom: 0;*/
}

.footer {
	width: 100%;
	height: 50px;
	line-height: 50px;
	text-align: center;
	color: #8a9398;
	background: #F0F4F7;
}


/*中间内容*/

.content {
	width: 1200px;
	/*min-height: 500px;*/
	margin: 0 auto;
	/*clear: both;*/
}


/*左右浮动*/

.pull_left {
	float: left;
}

.pull_right {
	float: right;
}


/*小手*/

.pointer {
	cursor: pointer;
}


/*投影加圆角*/

.shadow {
	border-radius: 4px;
	box-shadow: 5px 5px 10px rgba(0, 0, 0, 0.08),-5px 5px 10px rgba(0, 0, 0, 0.08);
}
/*默认清除浮动*/
.clearfloat:after {
	display: block;
	clear: both;
	content: "";
	visibility: hidden;
	height: 0
}
input:focus{
	outline: none;
}
/*登录页*/
.login_content{
	width: 440px;
	height: 340px;
	position: absolute;
	left: 50%;
	top: 50%;
	margin-top:-170px ;
	margin-left: -220px;
}
.login_top{
	width: 100%;
	height: 86px;
	text-align: center;
	line-height: 86px;
	background: #FFFFFF;
	font-size: 24px;
	color: #333333;
	font-weight: bold;
	border-radius: 4px 4px 0 0 ;
}
.login_mid{
	padding-left: 62px;
	padding-top: 32px;
}
.login_input{
	box-sizing: border-box;
	width: 316px;
	height: 48px;
	line-height: 48px;
	font-size: 18px;
	color: #999999;
	padding-left: 48px;
	border: 1px solid #e9eaec;
	border-radius: 4px;
}
.login_user{
	background: #FFFFFF url(../img/icon_user.png) no-repeat 12px center;
}
.login_password{
	background: #FFFFFF url(../img/icon_password.png) no-repeat 12px center;
}
.error_msg{
	font-size: 14px;
	color: #cb1307;
	margin-top: 8px;
	height: 24px;
	display: block;
	visibility: hidden;
}
.login_footer{
	width: 100%;
	height: 86px;
	background: #FFFFFF;
	border-radius: 4px 4px 0 0 ;
	box-sizing: border-box;
	padding: 16px 0;
}
.login_btn{
	display: block;
	width: 320px;
	height: 48px;
	line-height: 48px;
	text-align: center;
	font-size: 16px;
	color: #FFFFFF;
	background: #cb1307;
	margin: 0 auto;
	border: none;
	border-radius: 4px;
}
/********************分页样式********************/
.article-page{
    text-align: center;
    margin-top: 32px;
    margin-bottom: 48px;
}
.layui-laypage .layui-laypage-curr em {
    color: #de1606;
}
.layui-laypage .layui-laypage-curr .layui-laypage-em {
    padding: 0;
    border: 1px solid #df1606;
}
/*列表无数据样式*/
.listNone{
	box-sizing: border-box;
	width: 100%;
	height: 537px;
	background: #FFFFFF;
	padding-top: 168px;
	display: none;
}
.noData{
	width: 148px;
	height: 148px;
	background: url(../img/list_nodata.png) no-repeat;
	background-size: cover;
	margin: 0 auto;
}
.noData_word{
	width: 150px;
	margin: 0 auto;
	font-size: 18px;
    color: #999999;
    text-align: center;
    line-height: 18px;
    margin-top: 30px;
}
/*提示框*/
.msg_div{
	width: 240px;
	height:274px;
}
.msg_top{
	width: 100%;
    height: 54px;
    line-height: 54px;
    text-align: center;
    color: #FFFFFF;
    font-size: 18px;
    background: #de1606;
}
.msg_main{
	width: 100%;
	height: 220px;
	background: #FFFFFF;
	text-align: center;
	font-size: 16px;
	color: #666666;
	box-sizing: border-box;
    padding-top: 60px;
}
.msg_main p{
	margin-top: 10px;
}
/**修改密码的样式，因为是在所有的页面都有这个弹窗，所以写在公共样式中**/
.dialog_top{
	width: 100%;
	height: 54px;
	line-height: 54px;
	text-align: center;
	color: #FFFFFF;
	font-size: 18px;
	background: #de1606;
}
.dialog_main{
	width: 240px;
	margin: 0 auto;
	padding-top: 56px;
}
.dialog_main p{
	font-size: 16px;
	line-height: 16px;
	margin-bottom: 44px;
	color: #333333;
}
.dialog_btn{
	display: block;
	float: left;
	width:108px;
	height: 54px;
	line-height: 54px;
	text-align: center;
	border: 1px solid #CBCBCB;
	border-radius: 4px;
	color: #333333;
	font-size: 18px;
	background: #FFFFFF;
	cursor: pointer;
}
.sure_btn{
	border-color: #df1606;
	color: #dd1506;
	margin-right:24px;
}
.decode_div{
	width: 480px;
	/*height: 273px;*/
	display: none;
}
.decode_main{
	width: 240px;
	margin: 0 auto;
	padding: 32px 0 16px 0;
}
.decode_input{
	width: 240px;
	height: 54px;
	line-height: 54px;
	background: #e9e5e4;
	border: none;
	border-radius: 4px;
	font-size: 18px;
	color: #333333;
	padding-left: 16px;
	box-sizing: border-box;
}
.decode_main span{
	display: block;
	width: 100%;
	text-align: center;
	font-size: 14px;
	color: #999999;
	margin: 16px 0 32px 0;
}
.decode_main span.decode_msg{
	font-size: 14px;
	color: #DF1606;
	margin: 4px 0;
	text-align: left;
	visibility: hidden;
}
.float_right{
	float: right;
}




.password_div{
	width: 350px;
}
.password_div p{
	float: left;
	line-height: 45px;
	font-size: 18px;
	font-family: "微软雅黑";
}
.password_div input{
	float: right;
	line-height: 45px;
	height: 40px;
}
#change_password .decode_main{
	width: 350px;
}
#change_password .dialog_btn{
	width: 96px;
	height: 48px;
	line-height: 48px;
}
#change_password .sure_btn{
	margin-left: 65px;
}
#change_password .btn{
	margin-top: 15px;
}
